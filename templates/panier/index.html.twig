{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}


<section id="panier">
    <article>
        <h1>Votre panier</h1>
    </article>
</section>
<div class="example-wrapper">
    <h1>Panier</h1>

    <table>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            
        </tr>
    </table>

   <tbody>
            {% for p in products %}
                <tr>
                    <td>{{p.nom}}</td>
                    <td>{{p.prix}}</td>
                    
                </tr>
            
            {% else %}
                <tr>
                    <td colspan="2">Il n'y aucun produits</td>
                </tr>
            {% endfor %}
        </tbody>
</div>
{% endblock %}
